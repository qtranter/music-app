<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/layoutTypeSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <com.audiomack.views.AMCustomFontTextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/filters_header_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/opensans_extrabold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="13sp"
            app:customletterspacing="-0.6"
            tools:text="ALL" />

        <com.audiomack.views.AMCustomFontTextView
            android:id="@+id/tvSort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/filters_header_separator"
            android:drawableEnd="@drawable/filters_header_arrow"
            android:drawablePadding="10dp"
            android:fontFamily="@font/opensans_extrabold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="13sp"
            app:customletterspacing="-0.6"
            tools:text="NEWEST" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonEdit"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="48dp"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/accessibility_edit"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/buttonShuffle"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/accessibility_player_shuffle"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_shuffle" />

</FrameLayout>